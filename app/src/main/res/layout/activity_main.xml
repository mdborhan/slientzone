<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.borhan.prayertimesilentmood.MainActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Prayer Service"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="#F40909"
            android:layout_marginTop="50dp"
            />
        <EditText
            android:id="@+id/NameET"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:textSize="25sp"
            android:textColorHint="#F40909"
            android:gravity="center"
            android:textColor="#FF7F50"

            />
        <EditText
        android:id="@+id/GmailET"
            android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        android:textColorHint="#F40909"
        android:gravity="center"
            android:textColor="#FF7F50"

        />
        <Button
            android:id="@+id/loginBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="LogIn"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:background="#0F3F02"
            android:onClick="ServicePage"
            />



</LinearLayout>
