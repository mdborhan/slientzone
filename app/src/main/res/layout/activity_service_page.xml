<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#62A263"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.borhan.prayertimesilentmood.ServicePage">


    <Button
        android:id="@+id/alarmzone"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:text="Alarm Zone"
        android:textSize="20sp"
        android:background="@drawable/button_circle"
        android:onClick="alarmpage"

        />

    <Button
        android:id="@+id/silentzone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Silent Zone"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button2_circle"
        android:onClick="silentpage"

        />

</LinearLayout>
